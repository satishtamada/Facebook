<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </android.support.design.widget.AppBarLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        android:indeterminateTint="@color/colorAccent"
        android:indeterminateTintMode="src_atop"
        android:visibility="gone" />
    <LinearLayout
        android:id="@+id/noFeedLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_upload_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:alpha="0.4"
            android:background="@drawable/ic_profile_upload" />

        <Button
            android:id="@+id/btn_upload_profile"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:layout_marginTop="25dip"
            android:background="@drawable/bg_button_style"
            android:text="@string/btn_upload_profile"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_your_current_profile"
            android:alpha="0.4"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
