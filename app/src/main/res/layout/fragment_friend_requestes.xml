<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/friend_request_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/lbl_no_new_requests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_no_requests"
        android:textSize="18dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="60dp"
        android:indeterminateTint="@color/colorPrimary"
        android:indeterminateTintMode="src_atop"
        android:visibility="gone" />
    <Button
        android:id="@+id/btn_find_friend"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/btn_find_friends"
        android:textAllCaps="true"
        android:textSize="13dp"
        android:textColor="@color/white"
        android:background="@drawable/bg_button_style"
        android:visibility="gone"/>
</RelativeLayout>